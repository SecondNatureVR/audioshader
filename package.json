{
  "name": "audioshader",
  "version": "1.0.0",
  "description": "Audio-reactive visualizer for music mixing and arrangement",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "npx tsx scripts/check-e2e-deps.ts && playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:install": "npx playwright install && npx playwright install-deps",
    "check": "npm run typecheck && npm run lint && npm run test:run",
    "check:all": "npm run typecheck && npm run lint && npm run test:run && npm run test:e2e"
  },
  "keywords": [
    "audio",
    "visualizer",
    "webgl",
    "shader",
    "music"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.1",
    "@types/node": "^25.1.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "jsdom": "^27.4.0",
    "playwright": "^1.58.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "lit": "^3.3.2"
  }
}
